<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>libs</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/conf</outputDirectory>
			<includes>
				<include>*.properties</include>
				<include>*.conf</include>
				<include>logbak.xml</include>
			</includes>
			<excludes>
				<exclude>*.db</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/patterns</directory>
			<outputDirectory>/conf/patterns</outputDirectory>
		</fileSet>
		<fileSet>
			<outputDirectory>/logs</outputDirectory>
			<directory>src/main/logs</directory>
		</fileSet>
	</fileSets>
</assembly>